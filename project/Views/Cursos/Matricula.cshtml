@{
}
@model Curso

@{
    ViewBag.Title = "Matricula";
  
}

    <br>
    <center>
    <div class="mt-3 mb-3">
        <h4>Matrícula de Estudiante: @ViewBag.curso.NombreCurso </h4>
    </div>
    </center>
    <hr />
    <br>


@using (Html.BeginForm())
{
    <p>
        Nombre de estudiante: @Html.TextBox("SearchString") &nbsp
        <input type="submit" value="Buscar" class="btn btn-secondary" />
    </p>
}
<br>

<table class="table">
    <tr>
        <th>Nombre </th>

        <th>Apellidos </th>

        <th>Correo </th>

        <th>Cédula </th>

        <th></th>
    </tr>

    @foreach (var alum in ViewBag.profes)
    {
<tr>
    <td> <p>@alum.nombre</p></td>

    <td> <p>@alum.apellidos</p> </td>

    <td> <p>@alum.Email</p> </td>

    <td> <p>@alum.cedula</p> </td>

    <td>
        @Html.ActionLink("Seleccionar grupo", "GeneraMatricula", new { idAlum = alum.Id, idCurso = ViewBag.curso.IdCurso }, new { @class = "btn btn-success" })
    </td>
</tr>
    }

</table>
