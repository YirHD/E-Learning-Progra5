@model IEnumerable<project.Models.Curso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<center>
<h2>Mantenimiento de cursos </h2>
</center>


<p>
      <button class="btn btn-success ml-2" onclick="location.href='@Url.Action("Create","Cursos")';return false;">Añadir</button>
  @*  @Html.ActionLink("Nuevo", "Create") *@
</p>
@*<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
*@

<table class="table" id="CursosTable">
    <thead class="thead-dark">
    <tr>
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th>
            
        </th>
    </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoCurso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCurso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionCurso)
        </td>
        <td>
            <button class="btn btn-info ml-2" onclick="location.href='@Url.Action("Edit","Cursos",new{ id = item.IdCurso})';return false;">Editar</button>
             <button class="btn btn-primary ml-2" onclick="location.href='@Url.Action("Details","Cursos",new{ id = item.IdCurso})';return false;">Detalles</button>
              <button class="btn btn-danger ml-2" onclick="location.href='@Url.Action("Delete","Cursos",new{ id = item.IdCurso})';return false;">Eliminar</button>
               <button class="btn btn-warning ml-2" onclick="location.href='@Url.Action("Grupo","Cursos",new{ id = item.IdCurso})';return false;">Generar grupo</button>
                <button class="btn btn-dark ml-2" onclick="location.href='@Url.Action("Matricula","Cursos",new{ id = item.IdCurso})';return false;">Matricular estudiantes</button>

           @* @Html.ActionLink("Editar", "Edit", new { id = item.IdCurso }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.IdCurso }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.IdCurso }) |
            @Html.ActionLink("Generar Grupo", "Grupo", new { id = item.IdCurso}) |
            @Html.ActionLink("Matricular Estudiante", "Matricula", new { id = item.IdCurso }) *@
        </td>
    </tr>
}

</table>
